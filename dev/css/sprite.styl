

[class*="icon-"]
	background-size: 100%;
	background-repeat: no-repeat;
	display inline-block
	&.icon-menu
		background-image: url(../img/menu.png)
		height 17px
		width: 24px
	&.icon-vk-white, &.icon-fb-white, &.icon-vk-blue, &.icon-fb-blue, &.icon-tw-blue, &.icon-odn-blue
		background-position: center
	&[class*="icon-vk"]
		width: 12px
		height: 14px
	&[class*="icon-fb"]
		width 8px
		height 15px
	&.icon-vk-white
		background-image: url(../img/vk-white.png)
	&.icon-fb-white
		background-image: url(../img/fb-white.png)
	&.icon-vk-blue
		background-image: url(../img/vk-blue.png)
	&.icon-fb-blue
		background-image: url(../img/fb-blue.png)
	&.icon-tw-blue
		background-image: url(../img/tw-blue.png)
		width 16px
		height 12px
	&.icon-odn-blue
		background-image: url(../img/odn-blue.png)
		width 11px
		height 16px
	&.icon-arrow-bottom
		background-image: url(../img/arrow-bottom.png)
		height 7px
		width 12px
	&.icon-arrow-right
		background-image: url(../img/arrow-right.png)
		width 7px
		height 12px
	&.icon-arrow-left
		background-image: url(../img/arrow-left.png)
		width 7px
		height 12px
	&.icon-close
		background-image: url(../img/close.png)
		width 14px
		height 14px
	&.icon-home
		background-image: url(../img/home.png)
		width 11px
		height 13px
	&.icon-phone
		background-image: url(../img/phone.png)
		width 8px
		height 13px
	&.icon-search
		background-image: url(../img/search.png)
