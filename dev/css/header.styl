$HEADERHEIGHT = 62px





.animated {
          animation-duration: 1s;
          animation-fill-mode: both;
}



@keyframes fadeOutUp {
  0% {
    opacity: 1;
  }

  100% {
    opacity: 0;
		transform: translate3d(0, -100%, 0);
  }
}

.fadeOutUp {
	animation-name: fadeOutUp;
}

header
	position fixed
	top: 0
	width: calc( 100% - 200px )
	left: 0
	background white;
	z-index 90
	&.lighter
		&:after
			@extend .animated
			@extend .fadeOutUp
	&:after
		content ''
		display block
		position absolute
		top: 100%;
		background: linear-gradient(to bottom,  rgba(255,255,255,1) 0%,rgba(255,255,255,0.07) 45%,rgba(255,255,255,0) 100%);
		height 20px
		width 100%
.header
	line-height: $HEADERHEIGHT
	font-size 0
	border-bottom: 1px solid #e7f0f8
	.header-item-menu
		height: $HEADERHEIGHT
		width 52px
		display inline-block
		vertical-align: middle
		vertical-align top
	.header-item-logo
		height: $HEADERHEIGHT
		display inline-block
		vertical-align top
		width calc( 100% - 52px )
		width -webkit-calc( 100% - 52px )
		width -moz-calc( 100% - 52px )
	.header-item-logo__action
		line-height: $HEADERHEIGHT
		display block
		vertical-align middle
		width: 94px
		img
			display inline-block
			max-width: 100%;
			vertical-align middle
			margin-top: -2px
	.header-menu-open
		display block
		text-align center
		line-height: $HEADERHEIGHT
		height 100%
	.social-block
		padding 0
		padding-right: 18px
